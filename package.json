{
  "name": "vercel-be-node-template",
  "version": "0.1.0",
  "private": true,
  "description": "Reusable Vercel Node.js backend template (Express + TypeScript)",
  "keywords": [
    "vercel",
    "nodejs",
    "express",
    "typescript",
    "backend-template",
    "openapi",
    "seo",
    "llms"
  ],
  "main": "dist/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:smoke": "vitest run test/e2e/vercel-handler.smoke.test.ts",
    "ci": "npm run lint && npm run typecheck && npm test && npm run build",
    "bootstrap": "bash scripts/bootstrap-service.sh"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  }
}
